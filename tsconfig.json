{
    "include": [
        "./packages/**/*",
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "target": "es5",
        "jsx": "react",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "./types",
        "paths": {
            "store/Store": ["packages/store/app.ts"],
            "app2/Users": ["packages/app2/app.tsx"]
        }
    },
    "sourceMap": true,
    "experimentalDecorators": true,
}